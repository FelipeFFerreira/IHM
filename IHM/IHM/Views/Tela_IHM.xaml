                           FontAttributes="Bold"
                           TextColor="White"
                           FontSize="Large"
                           Text="{Binding Path= DigitalInput7.Nome}">
                    </Label>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="3">
                    <Frame CornerRadius="5"
                           BackgroundColor="Red"
                           HasShadow="true"
                           x:Name="DIGITAL_INPUT_8">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                    <Label VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand"
                           FontAttributes="Bold"
                           TextColor="White"
                           FontSize="Large"
                           Text="{Binding Path= DigitalInput8.Nome}">
                    </Label>
                </Grid>
                
                <!--Entradas Analogicas-->
                <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4">
                    <Frame BackgroundColor="AliceBlue">
                    </Frame>
                    <Label VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand"
                           FontAttributes="Italic"
                           TextColor="Black"
                           FontSize="Default"
                           Text="Entradas Analogicas">
                    </Label>
                </Grid>
                <Grid Grid.Row="4" Grid.Column="0">
                    <Frame CornerRadius="5"
                           BackgroundColor="Red"
                           HasShadow="true"
                           x:Name="ANALOGICA_INPUT_1">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
