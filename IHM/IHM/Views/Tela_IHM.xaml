<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:apresentacao ="clr-namespace:IHM.ModelApresentacao"
             x:Class="IHM.Views.Tela_IHM">
    <ContentPage.Content>
        <StackLayout>
            <Grid RowSpacing="2"
                  ColumnSpacing="2"
                  BackgroundColor="White">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="3"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                
                <!--Estrutura Entradas Digitais-->
                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4">
                    <Frame BackgroundColor="AliceBlue">
                    </Frame>
                    <Label VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand"
                           FontAttributes="Italic"
                           TextColor="Black"
                           FontSize="Default"
                           Text="Entradas Digitais">
                    </Label>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="0">
                    <Frame CornerRadius="5"
                           BackgroundColor="Red"
                           HasShadow="true"
                           x:Name="DIGITAL_INPUT_1">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                    <Label VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand"
                           FontAttributes="Bold"
                           TextColor="White"
                           FontSize="Large"
                           Text="{Binding Path= DigitalInput1.Nome}">
                    </Label>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="1">
                    <Frame CornerRadius="5"
                           BackgroundColor="Red"
                           HasShadow="true"
                           x:Name="DIGITAL_INPUT_2">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                    <Label VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand"
                           FontAttributes="Bold"
                           TextColor="White"
                           FontSize="Large"
                           Text="{Binding Path= DigitalInput2.Nome}">
                    </Label>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="2">
                    <Frame CornerRadius="5"
                           BackgroundColor="Red"
                           HasShadow="true"
                           x:Name="DIGITAL_INPUT_3">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                    <Label VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand"
                           FontAttributes="Bold"
                           TextColor="White"
                           FontSize="Large"
                           Text="{Binding Path= DigitalInput3.Nome}">
                    </Label>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="3">
                    <Frame CornerRadius="5"
                           BackgroundColor="Red"
                           HasShadow="true"
                           x:Name="DIGITAL_INPUT_4">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                    <Label VerticalOptions="CenterAndExpand"
                           HorizontalOptions="CenterAndExpand"
                           FontAttributes="Bold"
                           TextColor="White"
                           FontSize="Large"
                           Text="{Binding Path= DigitalInput4.Nome}">
                    </Label>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="0">
                    <Frame CornerRadius="5"
                           BackgroundColor="Red"
                           HasShadow="true"
                           x:Name="DIGITAL_INPUT_5">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                    <Label VerticalOptions="CenterAndExpand"
